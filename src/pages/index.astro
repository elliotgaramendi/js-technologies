---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";

const response = await fetch(`${import.meta.env.FRONTEND_URL}/data.json`);
const data = await response.json();
---

<Layout
	url={import.meta.env.FRONTEND_URL}
	title="JS Technologies I Best Frameworks and Libraries for JavaScript"
	description="The best JavaScript frameworks and libraries for frontend web development that enable optimal use of HTML, CSS and JavaScript by Elliot Garamendi."
	image="https://www.svgrepo.com/show/353925/javascript.svg"
>
	<section class="py-20">
		<div class="container px-4 mx-auto flex flex-col gap-8">
			<ul class="grid grid-cols-[repeat(auto-fit,_minmax(320px,_1fr))] gap-6">
				{
					data.map((element: object) => {
						return <Card data={element} />;
					})
				}
			</ul>
		</div>
	</section>
</Layout>
