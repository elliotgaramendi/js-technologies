---
import Card from "../components/Card.astro";
import Header from "../components/Header.astro";
import "../styles/css/index.css";
const response = await fetch("http://localhost:4321/data.json");
const data = await response.json();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>JS Technologies</title>
	</head>
	<body>
		<Header />
		<section class="py-20">
			<div class="container px-4 mx-auto flex flex-col gap-8">
				<ul class="grid grid-cols-[repeat(auto-fit,_minmax(320px,_1fr))] gap-6">
					{
						data.map((element: object) => {
							return <Card data={element} />;
						})
					}
				</ul>
			</div>
		</section>
	</body>
</html>
